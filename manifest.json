{
  "manifest_version": 3,
  "name": "Etsy 订单导出助手",
  "version": "1.0.0",
  "description": "在 Etsy 订单页面一键导出订单，支持模板配置。",
  "permissions": ["storage"],
  "host_permissions": ["https://www.etsy.com/*"],
  "content_scripts": [
    {
      "matches": [
        "https://www.etsy.com/*/orders*",
        "https://www.etsy.com/your/orders*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["dashboard/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
